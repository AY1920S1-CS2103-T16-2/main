<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.stage.Stage?>

<fx:root minHeight="800" minWidth="1100" onCloseRequest="#handleExit" title="Modulo" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
  <icons>
    <Image url="@/images/modulo.png" />
  </icons>
  <scene>
    <Scene>
      <stylesheets>
        <URL value="@DarkTheme.css" />
        <URL value="@Extensions.css" />
      </stylesheets>

      <VBox>
        <MenuBar fx:id="menuBar" style="-fx-background-color: #666699;" VBox.vgrow="NEVER">
          <Menu mnemonicParsing="false" text="Grades Tracker">
            <MenuItem mnemonicParsing="false" onAction="#handleExit" text="Exit" />
          </Menu>
          <Menu mnemonicParsing="false">
            <MenuItem fx:id="helpMenuItem" mnemonicParsing="false" />
          </Menu>
        </MenuBar>
            <HBox prefHeight="700" prefWidth="1100">
               <children>
                 <VBox fx:id="gradeList" minWidth="600" prefWidth="600" styleClass="pane-with-border">
                   <padding>
                     <Insets bottom="5" left="10" right="10" top="5" />
                   </padding>
                   <StackPane fx:id="moduleListPanelPlaceholder" VBox.vgrow="ALWAYS" />
                 </VBox>
                  <VBox prefHeight="700.0" prefWidth="507.0">
                     <children>
                        <StackPane fx:id="capPanelPlaceholder" maxHeight="105.0" minHeight="30" prefHeight="105.0" prefWidth="500.0" styleClass="pane-without-border" VBox.vgrow="ALWAYS">
                          <padding>
                            <Insets bottom="5" left="20" right="10" top="5" />
                          </padding>
                        </StackPane>
                       <StackPane fx:id="achievementPlaceHolder" maxHeight="141.0" minHeight="30" prefHeight="141.0" prefWidth="500.0" styleClass="pane-without-border" VBox.vgrow="ALWAYS">
                         <padding>
                           <Insets bottom="5" left="20" right="10" top="5" />
                         </padding>
                       </StackPane>
                          <StackPane fx:id="pieChartDisplayPlaceholder" prefHeight="446.0" prefWidth="500.0" styleClass="pane-with-border" VBox.vgrow="ALWAYS">
                            <padding>
                              <Insets bottom="5" left="10" right="10" top="5" />
                            </padding>
                          </StackPane>
                     </children>
                  </VBox>
               </children>
            </HBox>
        <StackPane fx:id="resultDisplayPlaceholder" maxHeight="100" minHeight="100" prefHeight="100" styleClass="pane-with-border" VBox.vgrow="ALWAYS">
          <padding>
            <Insets bottom="5" left="10" right="10" top="5" />
          </padding>
        </StackPane>
        <StackPane fx:id="commandBoxPlaceholder" styleClass="pane-with-border" VBox.vgrow="NEVER">
          <padding>
            <Insets bottom="5" left="10" right="10" top="5" />
          </padding>
        </StackPane>
        <StackPane fx:id="statusbarPlaceholder" VBox.vgrow="NEVER" />
      </VBox>
    </Scene>
  </scene>
</fx:root>
